<% layout('./layouts/boilerplate.ejs') %>

<link rel="stylesheet" href="css/paysAndTakes.css" />

<fieldset>
    <legend>Pays</legend>
    <% if(creditors.length == 0) { %>
    <h1>No Records Found!</h1>
    <% } else {%>
    <div class="tab-group">
        <% for(let creditor of creditors) {%>
        <div class="tab" id="<%- creditor._id%>">
            <div class="title">
                <h2><%- creditor.name %></h2>
                <div>: <span><%- creditor.total %> </span></div>
            </div>
            <div class="content">
                <table>
                    <tbody>
                        <% for(let item of creditor.items) {%>
                        <tr id="<%- item._id%>">
                            <td><%- item.name %></td>
                            <td><%- item.price %></td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        <% } %>
    </div>
    <% } %>
</fieldset>

<script>
    const page = "pays";
</script>
<script src="../JS/animate.js"></script>
<script src="../JS/paysAndTakes.js"></script>
