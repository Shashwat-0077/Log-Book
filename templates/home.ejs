<% layout('./layouts/boilerplate.ejs') %>
<link rel="stylesheet" href="/css/home.css" type="text/css" />

<main>
    <h1>
        My Balance <br />
        <span>
            (<%- totalPay > totalTake ? 'Pay' : 'Take' %> : <%- totalPay >
            totalTake ? totalPay - totalTake : totalTake - totalPay %>)
        </span>
    </h1>
    <section class="selection-menu">
        <a href="/pays">Pays (Total : <%- totalPay %> )</a>
        <a href="/takes">Takes (Total : <%- totalTake %> )</a>
        <form action="/person" class="person" method="get" autocomplete="off">
            <input
                type="text"
                name="name"
                id="name"
                placeholder="Name"
                autocomplete="off"
            />
            <span class="suggestion"></span>
            <!-- reference : https://codepen.io/Coding-Artist/pen/dyZXPOZ  -->

            <button>Submit</button>
        </form>
    </section>
</main>

<script>
    let person;
    const people = [];
</script>

<% for(let cred of creds ) { %>
<script>
    person = {
        name: "<%- cred.name%>",
        id: "<%- cred._id%>",
    };
    people.push(person);
</script>
<% } %>

<script src="/js/home.js"></script>
